{
    "id": "org.freedesktop.LinuxAudio.Plugins.GxPlugins",
    "branch": "23.08",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "runtime-version": "stable",
    "sdk": "org.freedesktop.Sdk//23.08",
    "build-extension": true,
    "appstream-compose": false,
    "build-options": {
        "prefix": "/app/extensions/Plugins/GxPlugins",
        "prepend-pkg-config-path": "/app/extensions/Plugins/GxPlugins/lib/pkgconfig"
    },
    "cleanup": [
        "/lib/lv2"
    ],
    "modules": [
        "shared-modules/linux-audio/lv2.json",
        {
            "name": "gxplugins",
            "buildsystem": "simple",
            "build-commands": [
                "sed -i -e s#~/.lv2#/lv2#g */Makefile",
                "make",
                "make install"
            ],
            "build-options": {
                "cxxflags": "`pkg-config --cflags lv2`",
                "env": {
                    "PREFIX": "${FLATPAK_DEST}",
                    "DESTDIR": "${FLATPAK_DEST}"
                }
            },
            "post-install": [
                "install -Dm644 org.freedesktop.LinuxAudio.Plugins.GxPlugins.metainfo.xml -t ${FLATPAK_DEST}/share/metainfo",
                "appstream-compose --basename=org.freedesktop.LinuxAudio.Plugins.GxPlugins --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.LinuxAudio.Plugins.GxPlugins",
                "install -Dm644 LICENSE -t $FLATPAK_DEST/share/licenses/gxplugins/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/brummer10/GxPlugins.lv2/releases/download/v1.0/gxplugins_1.0_src.tar.bz2",
                    "sha256": "45ff765d7e4dbf2786af081ff115d59ebbb9a681a0158c521b9f1b9317512dc6"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.GxPlugins.metainfo.xml"
                }
            ]
        }
    ]
}
